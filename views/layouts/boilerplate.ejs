  <link href='https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.css' rel='stylesheet' />
  <!-- Our own SS -->
  <link rel="stylesheet" href="/SS/app.css">
</head>

<body class="d-flex flex-column vh-100">
  <!-- Partials, like line below, allow u to reuse HTML code (the code in navbar.ejs) across multiple files reducing code duplication -->
  <%- include('../partials/navbar') %>
  <main class="container mt-5">
    <!-- Code from other pages that call 'layout('this_filepath')' will be passed into 'body' below -->
    <%- include('../partials/flash') %>
    <%- body %>
  </main>
  <%- include('../partials/footer') %>

  <!-- This is to enable 'Popper' (JS plugin) for use in Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  <script src="/JS/validateForms.js"></script>

</body>

</html>
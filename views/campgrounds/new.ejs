<!-- When line below is called anywhere inside an EJS file, reqs output of cur page be passed to 'layouts/boilerplate.ejs' as the 'body' local inside < %- body %> -->
<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-md-6 offset-md-3">
    <div class="card-shadow">
      <!-- We use the 'novalidate' attri to stop the native browser validations so Bootstrap can take over the validations -->
      <!-- 'multipart/form-data' is an encoding type that allows file '<input>' ele(s) to upload file data -->
      <form method="POST" action="/campgrounds" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="title">Title: </label>
          <!-- Stores the form data inside the arr 'campground[]' -->
          <!-- The 'required' attri makes it so you have to add input -->
          <input class="form-control" type="text" id="title" name="campground[title]" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location: </label>
          <input class="form-control" type="text" id="location" name="campground[location]" required>
          <div class="valid-feedback">
            Potatoes!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Add Images: </label>
          <input class="form-control" type="file" name="image" id="image" multiple>
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Price: </label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input class="form-control" type="text" id="price" name="campground[price]" placeholder="0.00" aria-describedby="price-label" required>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description: </label>
          <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
        </div>
        <div class="mb-3">
          <button class="btn btn-success">Add Campground</button>
        </div>
      </form>
      <p><a href="/campgrounds">All Campgrounds</a></p>
    </div>
  </div>